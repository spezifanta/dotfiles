[user]
    name = Alex Kuhrt
    email = alex@kuhrt.ot

[color]
    ui = true

[core]
    editor = vim
    excludesfile = ~/.gitignore   

[alias]
    amend = commit --amend --reuse-message=HEAD
    br = branch
    co = checkout
    ci = commit
    df = diff
    lg = log -p
    st = status -s .
    tags = tag -l
    who = shortlog -s --
    hist = log --pretty="tformat:\"%Cgreen%h%Creset %ad | %s%d [%an]\"" --graph --date=short
[push]
	default = simple
