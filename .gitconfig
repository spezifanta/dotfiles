[user]
    name = Alexander Kuhrt
    email = alexander.kuhrt@reservix.de

[color]
    ui = true

[core]
    editor = vim
    excludesfile = ~/.gitignore   
	pager = less -F -X

[alias]
    amend = commit --amend --reuse-message=HEAD
    br = branch
    co = checkout
    ci = commit
    df = diff
    lg = log -p
    st = status -s .
    remotes = remote -v
    tags = tag -l
    who = shortlog -s --
    hist = log --pretty="tformat:\"%Cgreen%h%Creset %ad | %s%d [%an]\"" --date=short
[push]
	default = simple
