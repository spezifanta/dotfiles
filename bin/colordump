#!/bin/bash
# http://crunchbang.org/forums/viewtopic.php?pid=134749%23p134749#p134749

xdef="$HOME/.Xresources"

#colors=( $( sed -re '/^!/d; /^$/d; /^#/d; s/(\*color)([0-9]):/\10\2:/g;' $xdef | egrep 'color1?[0-9]:' | sort | sed  's/^.*: *//g' ) )
colors=($( cat $xdef | egrep -o 'color1?[0-9]:(.*)' | sort -k2 -tr -n | cut -d' ' -f2))

echo -e "\e[1;37m
 Black    Red      Green    Yellow   Blue     Magenta  Cyan     White
────────────────────────────────────────────────────────────────────────
\e[0m"
for i in {0..7}; do echo -en "\e[$((30+$i))m ${colors[i]} \e[0m"; done
echo
for i in {8..15}; do echo -en "\e[1;$((22+$i))m ${colors[i]} \e[0m"; done
echo
