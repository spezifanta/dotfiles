function cd {
    builtin cd "$@" && ls --group-directories-first
}

function mkd {
    mkdir -p "$@" && cd "$@"
}

function psgrep {
    ps aux | grep -v grep | egrep "$1|PID"
}

function whatsmyip {
    curl icanhazip.com
}

# Usage: echo '{"foobar": 42}' | json
function json {
   python -m json.tool
}
